#!/bin/bash
set -e

source $(dirname $0)/version

cd $(dirname $0)/..

mkdir -p bin && rm -rf bin/*

go_build() {
  echo Building for os=$1 arch=$2
  mkdir -p bin/$1/$2
  o=bin/$1/$2/rancher-metadata
  if [ "$1" == "windows" ]; then
    ldflags="-X main.VERSION=$VERSION -extldflags -static"
  else
    ldflags="-X main.VERSION=$VERSION -linkmode external -extldflags -static"
  fi
  GOOS=$1 GOARCH=$2 CGO_ENABLED=0 go build -ldflags "$ldflags" -o $o
}

if [ "$CROSS" == "true" ]; then
  go_build linux amd64
  go_build windows amd64
else
  go_build linux amd64
fi
